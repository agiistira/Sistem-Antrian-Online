                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Loket :"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:id="@+id/namaloket"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Total Antrian"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:paddingLeft="15dp"
                            android:paddingRight="20dp"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:id="@+id/total"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/kolom"
                            android:padding="20dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Terpanggil"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="37dp"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:id="@+id/terpanggil"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/kolom"
                            android:padding="20dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Menunggu"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="38dp"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:id="@+id/menunggu"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/kolom"
                            android:padding="20dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ambilbtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/linlay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Ambil Antrian "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>